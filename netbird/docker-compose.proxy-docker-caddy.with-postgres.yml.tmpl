x-default: &default
  restart: "unless-stopped"
  logging:
    driver: "json-file"
    options:
      max-size: "500m"
      max-file: "2"

networks:
  default: {}
  reverse_proxy:
    external: false
    name: ${NETBIRD_REVERSE_PROXY_NETWORK}

services:
  dashboard:
    <<: *default
    image: netbirdio/dashboard:$NETBIRD_DASHBOARD_TAG
    environment:
      - NETBIRD_MGMT_API_ENDPOINT=$NETBIRD_MGMT_API_ENDPOINT
      - NETBIRD_MGMT_GRPC_API_ENDPOINT=$NETBIRD_MGMT_API_ENDPOINT
      - AUTH_AUDIENCE=$NETBIRD_DASH_AUTH_AUDIENCE
      - AUTH_CLIENT_ID=$NETBIRD_AUTH_CLIENT_ID
      - AUTH_CLIENT_SECRET=$NETBIRD_AUTH_CLIENT_SECRET
      - AUTH_AUTHORITY=$NETBIRD_AUTH_AUTHORITY
      - USE_AUTH0=$NETBIRD_USE_AUTH0
      - AUTH_SUPPORTED_SCOPES=$NETBIRD_AUTH_SUPPORTED_SCOPES
      - AUTH_REDIRECT_URI=$NETBIRD_AUTH_REDIRECT_URI
      - AUTH_SILENT_REDIRECT_URI=$NETBIRD_AUTH_SILENT_REDIRECT_URI
      - NETBIRD_TOKEN_SOURCE=$NETBIRD_TOKEN_SOURCE
      - NGINX_SSL_PORT=443
      - LETSENCRYPT_DOMAIN=
      - LETSENCRYPT_EMAIL=
    volumes:
      - $LETSENCRYPT_DATA_PATH:/etc/letsencrypt/
    networks:
      - default
      - reverse_proxy

  signal:
    <<: *default
    image: netbirdio/signal:$NETBIRD_SIGNAL_TAG
    depends_on:
      - dashboard
    volumes:
      - $SIGNAL_DATA_PATH:/var/lib/netbird
      - $LETSENCRYPT_DATA_PATH:/etc/letsencrypt:ro
    command: [
      "--log-file", "console"
    ]
    networks:
      - default
      - reverse_proxy

  relay:
    <<: *default
    image: netbirdio/relay:$NETBIRD_RELAY_TAG
    environment:
      - NB_LOG_LEVEL=info
      - NB_LISTEN_ADDRESS=:$NETBIRD_RELAY_PORT
      - NB_EXPOSED_ADDRESS=$NETBIRD_RELAY_ENDPOINT
      - NB_AUTH_SECRET=$NETBIRD_RELAY_AUTH_SECRET
    networks:
      - default
      - reverse_proxy

  management:
    <<: *default
    image: netbirdio/management:$NETBIRD_MANAGEMENT_TAG
    depends_on:
      - dashboard
      - postgres
    volumes:
      - $MGMT_DATA_PATH:/var/lib/netbird
      - $LETSENCRYPT_DATA_PATH:/etc/letsencrypt:ro
      - ./management.json:/etc/netbird/management.json
    command: [
      "--port", "$NETBIRD_MGMT_API_PORT",
      "--log-file", "console",
      "--log-level", "info",
      "--disable-anonymous-metrics=$NETBIRD_DISABLE_ANONYMOUS_METRICS",
      "--single-account-mode-domain=$NETBIRD_MGMT_SINGLE_ACCOUNT_MODE_DOMAIN",
      "--dns-domain=$NETBIRD_MGMT_DNS_DOMAIN"
    ]
    environment:
      - NETBIRD_STORE_ENGINE_POSTGRES_DSN=$NETBIRD_STORE_ENGINE_POSTGRES_DSN
      - NETBIRD_STORE_ENGINE_MYSQL_DSN=$NETBIRD_STORE_ENGINE_MYSQL_DSN
    networks:
      - default
      - reverse_proxy

  coturn:
    <<: *default
    image: coturn/coturn:$COTURN_TAG
    volumes:
      - ./turnserver.conf:/etc/turnserver.conf:ro
    network_mode: host
    command:
      - -c /etc/turnserver.conf

  postgres:
    <<: *default
    image: postgres:18-alpine
    environment:
      - POSTGRES_DB=$NETBIRD_POSTGRES_DB
      - POSTGRES_USER=$NETBIRD_POSTGRES_USER
      - POSTGRES_PASSWORD=$NETBIRD_POSTGRES_PASSWORD
    volumes:
      - $POSTGRES_DATA_PATH:/var/lib/postgresql/data
    networks:
      - default

  caddy:
    <<: *default
    image: caddy:latest
    container_name: caddy
    ports:
      - "80:80"
      - "443:443"
      - "443:443/udp"
    volumes:
      - ./caddy_data:/data
      - ./Caddyfile:/etc/caddy/Caddyfile
    networks:
      - reverse_proxy